@model WebApp.Models.ItemDTO

@{
    ViewData["Title"] = "Add item";
}

<div class="col-8 m-auto">
    <h1 class="display-4">Manage items</h1>
    <h3>Add item</h3>
    <form asp-controller="Item" asp-action="Add" method="post">
        <label for="itemName" class="form-label">Item name</label>
        <input type="text" class="form-control" id="itemName" name="name" aria-describedby="itemName">

        <label for="itemPrice" class="form-label">Price</label>
        <input type="number" min="0" name="price" class="form-control" id="itemPrice" aria-describedby="itemPrice">

        <button class="mt-3 btn btn-primary btn-block" type="submit">Add</button>
    </form>
</div>
