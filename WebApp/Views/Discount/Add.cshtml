@model WebApp.Models.DiscountDTO

@{
    ViewData["Title"] = "Add discount";
}

<div class="col-8 m-auto">
    <h1 class="display-4">Manage discounts</h1>
    <h3>Add item</h3>
    <form asp-controller="Discount" asp-action="Add" method="post">
        @Html.DropDownListFor(x => x.ItemId, new SelectList(Model.Items, "Key", "Value"), "Select", new { @class = "form-control w-100" })
        <label for="count" class="form-label">Count</label>
        <input type="number" min="0" class="form-control" id="count" name="count" aria-describedby="count">

        <label for="discountPercent" class="form-label">Discount percent</label>
        <input type="number" min="0" name="discountPercent" class="form-control" id="discountPercent" aria-describedby="discountPercent">
        <button class="mt-3 btn btn-primary btn-block" type="submit">Add</button>
    </form>
</div>
