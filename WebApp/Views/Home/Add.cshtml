@model WebApp.Models.CartItemDTO

@{
    ViewData["Title"] = "Cart items";
}

<div class="col-8 m-auto">
    <h1 class="display-4">Manage cart items</h1>
    <h3>Cart items</h3>
    <form asp-controller="Home" asp-action="Add" method="post">
        @Html.DropDownListFor(x => x.ItemId, new SelectList(Model.Items, "Key", "Value"), "Select", new { @class = "form-control w-100" })
        <label for="count" class="form-label">Amount</label>
        <input type="number" min="0" class="form-control" id="amount" name="amount" aria-describedby="amount">

        <button class="mt-3 btn btn-primary btn-block" type="submit">Add</button>
    </form>
</div>
