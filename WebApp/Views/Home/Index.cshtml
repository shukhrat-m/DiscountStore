@model WebApp.Models.CartItemsDTO

@{
    ViewData["Title"] = "Discount store";
}

<div class="col-10 m-auto">
    <h1 class="display-4">Discount store</h1>

    <h3>Cart</h3>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
    }

    <table class="table table-hover">
        <thead>
            <tr>
                <td>SKU</td>
                <td>Price</td>
                <td>Discount</td>
            </tr>
        </thead>

        <tbody>
            @if (!Model.CartItems.Any())
            {
                <tr>
                    <td colspan="3">Cart is empty</td>
                </tr>
            }

            @foreach (CartItemDTO item in Model.CartItems)
            {
                <tr>
                    <td>@item.ItemName</td>
                    <td>@item.Price</td>
                    <td>@item.Discount</td>
                </tr>
            }
            @if (Model.CartItems.Any())
            {
                <tr>
                    <td colspan="2"></td>
                    <td>@Model.TotalPrice</td>
                </tr>
            }
        </tbody>
    </table>
</div>
